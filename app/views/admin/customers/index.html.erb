<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
      <%= customer.first_name %><%= customer.last_name %>
      <% end %></td>
      <td><%= customer.email %></td>
      <td>ステータス未実装</td>
    </tr>
    <% end %>
  </tbody>
</table>