<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div>
    <h3>名前</h3>
    <%= f.label :last_name, "（性）" %>
    <%= f.text_field :last_name %>
    <%= f.label :first_name, "（名）" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <h3>フリガナ</h3>
    <%= f.label :last_name_kana, "（セイ）" %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :first_name_kana, "（メイ）" %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :postal_code, "郵便番号（ハイフンなし）"%>
    <%= f.number_field :postal_code %>
  </div>

  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（６文字以上）" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
